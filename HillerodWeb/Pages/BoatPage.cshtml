@page "{id:int}"
@model HillerodWeb.Pages.BoatPageModel
@{
    ViewData["Title"] = "Boat Details";
}

<h1>Boat Details</h1>

@if (Model.Boat != null)
{
    <table>
        <tr>
            <th>ID</th>
            <td>@Model.Boat.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Boat.Name</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>@Model.Boat.Type</td>
        </tr>
        <tr>
            <th>Model</th>
            <td>@Model.Boat.Model</td>
        </tr>
        <tr>
            <th>Sail Number</th>
            <td>@Model.Boat.SailNumber</td>
        </tr>
        <tr>
            <th>Engine</th>
            <td>@Model.Boat.Engine</td>
        </tr>
        <tr>
            <th>Measures</th>
            <td>@Model.Boat.Measures</td>
        </tr>
        <tr>
            <th>Building Year</th>
            <td>@Model.Boat.BuildingYear</td>
        </tr>
        <tr>
            <th>Available</th>
            <td>@(Model.Boat.IsAvailable ? "Yes" : "No")</td>
        </tr>
    </table>

    <br />
    @if (Model.Boat.IsAvailable)
    {
        <a href="/Booking/Book?id=@Model.Boat.Id" class="book-button">Book Now</a>
    }
    else
    {
        <button class="book-button" disabled>Not Available</button>
    }
}
else
{
    <p>Boat not found.</p>
}
